@model IEnumerable<Bank.Models.Loans>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoansId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoansName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoansDate)
            </th>
            <th>  <a asp-action="Create" class="btn btn-sm btn-success" ><i class="fa-solid fa-plus"></i>
                 New</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoansId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoansName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoansDate)
            </td>
            <td>
               <div class="btn-group btn-group-sm ">
                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-solid fa-pen"></i>
                    Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-solid fa-clipboard-list"></i>
                    Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record? ')">
                    <i class="fa-solid fa-trash-xmark"></i>
                    Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
